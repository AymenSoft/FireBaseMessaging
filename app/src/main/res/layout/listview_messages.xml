<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/rl_my_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/my_message">
        <TextView
            android:id="@+id/tv_my_mesaage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="my message"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/img_my_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_your_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/your_message"
        android:padding="12dp"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/tv_your_mesaage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your message"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/img_your_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>